install()
{
  if [ -f $HOME/.bash_aliases ]; then
      touch $HOME/.bash_aliases
  fi

  echo 'alias krsub="sudo kill $(sudo lsof -i tcp:52698 | sed -n '2,2 p' | awk '{print $2}')"'  >> $HOME/.bash_aliases
}

remove()
{
  echo "nothing to remove"
}

case "$1" in
    install ) install ;;
    remove ) remove ;;
    * ) exit 1 ;;
esac


install()
{
  if [ -f /home/$USER/.bash_aliases ]; then
      touch /home/$USER/.bash_aliases
  fi
  
  echo 'alias krsub="sudo kill $(sudo lsof -i tcp:52698 | sed -n '2,2 p' | awk '{print $2}')"'  >> /home/$USER/.bash_aliases
}

remove()
{
}

case "$1" in
    install ) install ;;
    remove ) remove ;;
    * ) exit 1 ;;
esac



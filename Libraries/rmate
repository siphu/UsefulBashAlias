install()
{
  wget https://raw.githubusercontent.com/aurora/rmate/master/rmate -O /usr/bin/rmate
  chmod +x /usr/bin/rmate
  ln -s /usr/bin/rmate /usr/sbin/rsub
  exit 0
}

remove()
{
  rm -rf /usr/sbin/rmate
  rm -rf /usr/sbin/rsub
  exit 0
}

case "$1" in
    install ) install ;;
    remove ) uninstall ;;
    * ) exit 1 ;;
esac

if [[ $UID -ne 0 ]]; then
  # root required.
  exit 7
fi

install()
{
  wget https://raw.githubusercontent.com/aurora/rmate/master/rmate -O /usr/bin/rmate
  chmod +x /usr/bin/rmate
  ln -s /usr/bin/rmate /usr/bin/rsub
  exit 0
}

remove()
{
  rm -rf /usr/bin/rmate
  rm -rf /usr/bin/rsub
  exit 0
}

case "$1" in
    install ) install ;;
    remove ) remove ;;
    * ) exit 1 ;;
esac
